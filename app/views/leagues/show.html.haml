="#{@league.name} (#{@league.sport})"
.row
  .col-md-6
    %h1="Teams"
  .col-md-6
    %button.btn.btn-info= link_to "New Team", new_league_team_path(@league)
%table.table
  %thead
    %tr
      %td="Name"
      %td="Current Rating"
      %td
  %tbody
    -@teams.each do |team|
      %tr=team.name
      %tr
      %tr
